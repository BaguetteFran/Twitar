generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model tweets {
  id             String   @id @default(uuid()) // Set as primary key
  created_at     String
  screen_name    String?
  profile_img    String?
  verified       Int?
  text           String?
  img_url        String?
  media          String?
  favorite_count Int?
  view_count     Int?
  retweet_count  Int?
  score          Int?

  @@unique([id])
}